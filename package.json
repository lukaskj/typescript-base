{
  "name": "@lukaskj/typescript-base",
  "version": "1.0.0",
  "main": "index.js",
  "author": "lukaskj",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist coverage .rollup.cache",
    "prebuild": "npm run clean && npm run lint",
    "build": "rollup -c rollup.config.mjs",
    "start": "npm run build && node dist/index.js",
    "start:dev": "ts-node ./src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.config.js --runInBand",
    "test:watch": "jest --watch --config ./jest.config.js",
    "test:cov": "jest --coverage --config ./jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand  --config ./jest.config.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cup": "^2.0.4",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.17.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukaskj/typescript-base.git"
  },
  "bugs": {
    "url": "https://github.com/lukaskj/typescript-base/issues"
  },
  "homepage": "https://github.com/lukaskj/typescript-base#readme",
  "files": [
    "dist/**/*",
    "!**/test/**"
  ]
}